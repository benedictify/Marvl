<h1>Request Member Access</h1>
<p>You will be notified once an admin has approved your account</p>

<div class="alert">
<% if @errors %>
	<% @errors.each do |error| %>
		<%= error %>
	<% end %>
<% end %>
</div>

<%= form_for @user, html: {class: "form-group"} do |f| %>
	<%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :organisation %>
  <%= f.collection_select :organisation_id, Organisation.all, :id, :name %><br>
  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-group password'%><br>
  <%= f.submit %>
<% end %>
