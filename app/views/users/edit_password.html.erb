<h2>Change Password</h2>

<div>
  <%= form_tag patchpassword_path, method: 'post' do %>
    <div>
      <%= label_tag(:old_password, "Type Old Password") %><br>
      <%= password_field_tag (:old_password)  %>
    </div><br>
    <div>
      <%= label_tag ("Type New Password") %><br>
      <%= password_field_tag (:new_password_1)  %>
    </div>
    <div>
      <%= label_tag ("Confirm New Password") %><br>
      <%= password_field_tag (:new_password_2) %>
    </div>
    <div>
      <%= submit_tag %>
    </div>
  <% end %>
</div>