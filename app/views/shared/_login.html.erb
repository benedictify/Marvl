<div class="alert">
	<p><%= flash[:notice] %></p>
	<p><%= flash[:alert] %></p>
</div>

<%= form_tag('/login', class: "form-group") do %>
	<%= image_tag('user.svg', class: "icon") %>
  <%= label_tag(:email, "Email (case sensitive!):") %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:password, "Password:") %>
  <%= password_field_tag :password, nil, class: 'form-group password'%>
  <%= submit_tag("Login") %>
  <%# link_to "Forgot your password?", new_password_reset_path %>
<% end %>


