<h2>Edit <%= @location.name %>'s location information</h2>

<%= form_for [@location], html: {class: "form-group"} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :street_address %>
    <%= f.text_field :street_address %><br>
    <%= f.label :city %>
    <%= f.text_field :city %><br>
    <%= f.label :state %>
    <%= f.text_field :state %><br>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %><br>
    <%= f.label :phone %>
    <%= f.text_field :phone %><br>

    <%= f.submit "Submit Location Edits" %>   

<% end %>