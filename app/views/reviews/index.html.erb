<h2>Recent reviews</h2>
  <div class="reviews">
    <ul>
      <% @recent_reviews.each do |review| %>
        <li><%= link_to review.title, vendor_review_path(review.vendor_id, review.id) %></li>
        <li><%= review.content %></li><br>
    <% end %> 
  </ul>
  </div>
<div class="green-border"></div>
<h2>Recent reviews by Category</h2>
  <div class="reviews">
    <% @categories.each do |category| %>
      <div>
      	<h3><%= category.name %></h3>
      	  <ul>
            <% @reviews.select { |review| review.vendor.categories.include? category }.sort_by { |review| review[:created_at] }.take(3).each do |review| %>
              <li>
                <%= link_to review.title, vendor_review_path(review.vendor_id, review.id) %>
                <%= review.content %><br><br>
              </li> 
            <% end %>
      	  </ul>
      </div>
    <% end %> 
  </div>