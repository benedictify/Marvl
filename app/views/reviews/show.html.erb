	<div class = "review">
      <%= render "shared/list_single_review", locals: { review: @review} %>
	</div>

<div class="green-border"></div><br>
    
    <%= link_to "See all of #{@review.vendor.name}'s reviews", vendor_path(@vendor) %> | 
    <%= link_to "See all reviews", reviews_path %> <br><br>

</div>

<script type="text/javascript">
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>