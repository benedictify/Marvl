<h2>Edit this forum post.</h2>

<div class="form-group">
  <%= form_for @post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
  
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
    <%= f.submit "Update post" %>
  <% end %>
</div>